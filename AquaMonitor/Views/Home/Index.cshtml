@using AquaMonitor.Web.Global
@using AquaMonitor.Web.Helpers
@model AquaMonitor.Data.Models.IGlobalState
@{
    ViewData["Title"] = "System Overview";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@inject AquaMonitor.Data.Context.AquaDbContext dbContext
@functions{
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}


@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-xl-8 mb-5 mb-xl-0">
        <div class="card bg-gradient-default shadow">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="text-uppercase text-light ls-1 mb-1">Overview</h6>
                        <h2 class="text-white mb-0">Temperatures (&#176;F)</h2>
                    </div>
                    <div class="col">
                        <ul class="nav nav-pills justify-content-end">
                            <li class="nav-item mr-2 mr-md-0" data-toggle="chart" data-target="#chart-temps" data-update='@Url.RouteUrl("defaultApi",new { controller="tempchart" })?startDate=@DateTime.Now.AddDays(-7).ToString("MM-dd-yyyy HH:mm:ss")&endDate=@DateTime.Now.ToString("MM-dd-yyyy HH:mm:ss")' data-prefix="$" data-suffix="k">
                                <a href="#" class="nav-link py-2 px-3 active" data-toggle="tab">
                                    <span class="d-none d-md-block">Week</span>
                                    <span class="d-md-none">M</span>
                                </a>
                            </li>
                            <li class="nav-item" data-toggle="chart" data-target="#chart-temps" data-update='@Url.RouteUrl("defaultApi",new { controller="tempchart" })?startDate=@DateTime.Now.AddHours(-72).ToString("MM-dd-yyyy HH:mm:ss")&endDate=@DateTime.Now.ToString("MM-dd-yyyy HH:mm:ss")' data-prefix="$" data-suffix="k">
                                <a href="#" class="nav-link py-2 px-3" data-toggle="tab">
                                    <span class="d-none d-md-block">72 Hours</span>
                                    <span class="d-md-none">W</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Chart -->
                <div class="chart">
                    <!-- Chart wrapper -->
                    <canvas id="chart-temps" class="chart-canvas"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-4">
        <div class="card shadow">
            <div class="card-header bg-transparent">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="text-uppercase text-muted ls-1 mb-1">Water</h6>
                        <h2 class="mb-0" data-update='@Url.RouteUrl("defaultApi",new { controller="waterchart" })?startDate=@DateTime.Now.AddHours(-72).ToString("MM-dd-yyyy HH:mm:ss")&endDate=@DateTime.Now.ToString("MM-dd-yyyy HH:mm:ss")'>Level Monitor</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Chart -->
                <div class="chart">
                    <canvas id="chart-water" class="chart-canvas"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="table-section">
    <partial name="_tables" model="Model" />
</div>