            <span><label>Min OutTemp: </label><input id="MinOutTempF[{{Number}}]" /></span>
            <span><label>Max OutTemp: </label><input id="MaxOutTempF[{{Number}}]" /></span>
            <br />
            <span><label>WaterID: </label><input id="WaterId[{{Number}}]" /></span>
